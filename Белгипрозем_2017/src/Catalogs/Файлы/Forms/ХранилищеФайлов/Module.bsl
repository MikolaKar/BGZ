					ПолноеОписание = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
						НСтр("ru = 'Файл ""%1"" скопирован в папку ""%2""'"), ПараметрыПеретаскивания.Значение[0], Строка(ВладелецФайла));
					
