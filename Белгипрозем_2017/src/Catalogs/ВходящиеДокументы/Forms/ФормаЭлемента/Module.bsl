&НаСервере
Процедура УстановитьУчетОбращенийГраждан()
	
	Если УчитыватьКакОбращениеГраждан Тогда  
		
		//МиСофт+
		ВидКорреспондентаОбращения = Объект.ВидДокумента.ЮрФизЛицо;
		Если ВидКорреспондентаОбращения = ВидыКорреспондентовФизЛицо Тогда
			
			Если ЗначениеЗаполнено(Объект.Подписал) Тогда 
				Объект.Подписал = Неопределено;
			КонецЕсли;	
			
			ВидОбращенияАнонимное = Перечисления.ВидыОбращенийГраждан.Анонимное;
			Если Объект.ВидОбращения = ВидОбращенияАнонимное Тогда 
				Элементы.ОтправительТекст.АвтоОтметкаНезаполненного = Ложь;
				Элементы.ОтправительТекст.ОтметкаНезаполненного = Ложь;
				Элементы.ОтправительТекст.Доступность = Ложь;
			КонецЕсли;
			
		КонецЕсли;
		
		Элементы.ВидОбращения.Видимость = (ВидКорреспондентаОбращения = ВидыКорреспондентовФизЛицо);
		
		Если ЗначениеЗаполнено(Объект.Отправитель) И Объект.Отправитель.ЮрФизЛицо <> ВидКорреспондентаОбращения Тогда 
			Объект.Отправитель = Неопределено;
		КонецЕсли;
		
		ОтправительТекст = ?(ЗначениеЗаполнено(Объект.Подписал), 
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку("%1, %2", Объект.Отправитель, Объект.Подписал),
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку("%1", Объект.Отправитель));
		
		Элементы.ОсновноеОбращение.Доступность = Объект.Дубликат;
		Элементы.ОсновноеОбращение.АвтоОтметкаНезаполненного = Объект.Дубликат;
		Элементы.ОсновноеОбращение.ОтметкаНезаполненного = Объект.Дубликат И Не ЗначениеЗаполнено(ОсновноеОбращение);
		
		СписокВыбора = Элементы.ОтправительТекст.СписокВыбора;
		СписокВыбораКоличество = СписокВыбора.Количество();
		
		Для Инд = 1 По СписокВыбораКоличество Цикл  
			Строка = СписокВыбора[СписокВыбораКоличество - Инд];
			Если ТипЗнч(Строка.Значение) = Тип("Строка") Тогда
				
				КорреспондентНаименование = ?(Найти(Строка.Значение, ", ") > 0, 
				Лев(Строка.Значение, Найти(Строка.Значение, ", ")-1),
				Строка.Значение);
				
				Корреспондент = Справочники.Корреспонденты.НайтиПоНаименованию(КорреспондентНаименование);
				Если Корреспондент.ЮрФизЛицо <> Объект.ВидДокумента.ЮрФизЛицо Тогда
					СписокВыбора.Удалить(Строка);
				КонецЕсли;
				
			ИначеЕсли ТипЗнч(Строка.Значение) = Тип("СправочникСсылка.Корреспонденты") 
				И Строка.Значение.ЮрФизЛицо <> Объект.ВидДокумента.ЮрФизЛицо Тогда 
				СписокВыбора.Удалить(Строка);
			КонецЕсли;	
		КонецЦикла;
		//МиСофт-
		
	Иначе
		Элементы.ОтправительТекст.АвтоОтметкаНезаполненного = Истина;
		Элементы.ОтправительТекст.Доступность = Истина;
		
		СохранениеВводимыхЗначений.ЗаполнитьСписокВыбора(ЭтаФорма, ЭлементыДляСохранения(), ЭтаФорма.ИмяФормы);
	КонецЕсли;
	
КонецПроцедуры	

&НаСервере
Функция НеобходимоОтразитьВозвратДокументаКорреспондентом()
	
	Если Не ЗначениеЗаполнено(Объект.ДатаРегистрации) Тогда 
		Возврат Ложь;
	КонецЕсли;	
	
	Если Объект.Ссылка.ДатаРегистрации = Объект.ДатаРегистрации Тогда 
		Возврат Ложь;
	КонецЕсли;	
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ИСТИНА КАК Поле1
	|ИЗ
	|	РегистрСведений.ЖурналПередачиДокументов КАК ЖурналПередачиДокументов
	|ГДЕ
	|	ЖурналПередачиДокументов.Документ = &Документ
	|	И ТИПЗНАЧЕНИЯ(ЖурналПередачиДокументов.Пользователь) = ТИП(Справочник.КонтактныеЛица)
	|	И ЖурналПередачиДокументов.Пользователь.Владелец = &Корреспондент
	|	И (НЕ ЖурналПередачиДокументов.Возвращен)";
	
	Запрос.УстановитьПараметр("Корреспондент", Объект.Отправитель);
	Запрос.УстановитьПараметр("Документ", ПредметПереписки);
	
	Результат = Запрос.Выполнить().Выгрузить();
	Если Результат.Количество() = 0 Тогда 
		Возврат Ложь;
	ИначеЕсли Результат.Количество() = 1 Тогда 
		Возврат Истина;
	Иначе	
		
		Если Не ЗначениеЗаполнено(Объект.Подписал) Тогда 
			Возврат Ложь;
		КонецЕсли;	
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	ИСТИНА
		|ИЗ
		|	РегистрСведений.ЖурналПередачиДокументов КАК ЖурналПередачиДокументов
		|ГДЕ
		|	ЖурналПередачиДокументов.Документ = &Документ
		|	И ЖурналПередачиДокументов.Пользователь = &КонтактноеЛицо
		|	И (НЕ ЖурналПередачиДокументов.Возвращен)";
	
		Запрос.УстановитьПараметр("КонтактноеЛицо", Объект.Подписал);
		Запрос.УстановитьПараметр("Документ", ПредметПереписки);
		
		Результат = Запрос.Выполнить().Выгрузить();
		Если Результат.Количество() = 0 Тогда 
			Возврат Ложь;
		ИначеЕсли Результат.Количество() = 1 Тогда 
			Возврат Истина;
		Иначе	
			Возврат Ложь;
		КонецЕсли;	
		
	КонецЕсли;	
		
КонецФункции	

