			Результат = Запрос.Выполнить().Выбрать();
			Результат.Следующий();
	
			ФлагПодписи = Результат.ИспользоватьЭП;
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат ФлагПодписи;
	
