&НаКлиенте
Процедура ВыполнитьЗадачу(Команда)
	
	Если МультипредметностьКлиент.ПроверитьЗаполнениеПредметовЗадачи(ЭтаФорма) Тогда
		Возврат;
	КонецЕсли;
	
	ВозвратНаДоработку = Команда.Имя = "ВернутьНаДоработку";
	
	ОдинИсполнитель = Исполнители.Количество() = 1;
	Если ОдинИсполнитель Тогда
		СтрокаИсполнителя = Исполнители[0];
		СтрокаИсполнителя.ОтправленоНаДоработку = ВозвратНаДоработку;
		СтрокаИсполнителя.КомментарийПроверяющего = Объект.РезультатВыполнения;
	КонецЕсли;
	
	ЕстьОшибки = Ложь;
	ЕстьВозвраты = Ложь;
	ИндексСтрокиВозврата = 0;
	
	Для Каждого Исполнитель Из Исполнители Цикл
		
		Если Исполнитель.ОтправленоНаДоработку Тогда
			ЕстьВозвраты = Истина;
			ИндексСтрокиВозврата = Исполнители.Индекс(Исполнитель);
		КонецЕсли;
		
		// Если стоит флаг "вернуть на доработку", значит должен быть комментарий,
		// если флаг не стоит, значит комментария быть не должно
		Если Исполнитель.ОтправленоНаДоработку = ПустаяСтрока(Исполнитель.КомментарийПроверяющего) Тогда
			
			ЕстьОшибки = Истина;
			
			Если Исполнитель.ОтправленоНаДоработку Тогда
				ИндексСтрокиОшибки = ИндексСтрокиВозврата;
				ТекстСообщения = НСтр("ru = 'Не заполнен комментарий'");
			Иначе
				ИндексСтрокиОшибки = Исполнители.Индекс(Исполнитель);
				ТекстСообщения = НСтр("ru = 'Комментарий может быть заполнен только для возвращаемой задачи'");
			КонецЕсли;
			
			Если ОдинИсполнитель Тогда
				ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения,, "Объект.РезультатВыполнения");
			Иначе
				ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения,, 
				"Исполнители[" + Формат(ИндексСтрокиОшибки, "ЧГ=; ЧН=") + "].КомментарийПроверяющего");
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Если ВозвратНаДоработку <> ЕстьВозвраты Тогда
		
		ЕстьОшибки = Истина;
		
		Если ЕстьВозвраты Тогда
			ТекстСообщения = НСтр("ru = 'Отмечены задачи, возвращаемые на доработку'");
		Иначе
			ТекстСообщения = НСтр("ru = 'Не выбрано ни одной возвращаемой задачи'");
		КонецЕсли;
		
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения,, 
			"Исполнители[" + Формат(ИндексСтрокиВозврата, "ЧГ=; ЧН=") + "].ОтправленоНаДоработку");
		
	КонецЕсли;
		
	Если ЕстьОшибки Тогда
		Возврат
	КонецЕсли;
	
	ПараметрыОповещения = Новый Структура;
	ПараметрыОповещения.Вставить("ВозвратНаДоработку", ВозвратНаДоработку);
	
	ОписаниеОповещения = Новый ОписаниеОповещения(
		"ПродолжениеВыполненияЗадачиПослеПроверкиНаЗанятыеФайлы",
		ЭтотОбъект,
		ПараметрыОповещения);
		
	РаботаСБизнесПроцессамиКлиент.ПроверитьНаличиеЗанятыхФайлов(Объект, ОписаниеОповещения);
	
КонецПроцедуры

&НаКлиенте
Процедура ПродолжениеВыполненияЗадачиПослеПроверкиНаЗанятыеФайлы(Результат, Параметры) Экспорт
	
	Если Результат <> КодВозвратаДиалога.Да Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрыЗаписи = Новый Структура;
	ПараметрыЗаписи.Вставить("ОтключитьОповещение_ЗадачаИзменена");
	Если Не Записать(ПараметрыЗаписи) Тогда 
		Возврат;
	КонецЕсли;
	
	ПараметрыОбработчика = Новый Структура;
	ПараметрыОбработчика.Вставить("УникальныйИдентификаторФормыИзмененияПараметров", УникальныйИдентификатор);
	ОписаниеОповещения = Новый ОписаниеОповещения(
		"ПродолжениеВыполненияЗадачиПослеИзмененияПараметров",
		ЭтотОбъект,
		ПараметрыОбработчика);
	
	Если Параметры.ВозвратНаДоработку Тогда
		
		ПараметрыФормы = Новый Структура;
		ПараметрыФормы.Вставить("Ключ", Объект.БизнесПроцесс);
		ОткрытьФорму(
			"БизнесПроцесс.Исполнение.Форма.ФормаИзменениеПараметров", 
			ПараметрыФормы, 
			ЭтаФорма,,,,
			ОписаниеОповещения,
			РежимОткрытияОкнаФормы.БлокироватьВесьИнтерфейс);
	Иначе
		ВыполнитьОбработкуОповещения(ОписаниеОповещения, КодВозвратаДиалога.ОК);
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ПродолжениеВыполненияЗадачиПослеИзмененияПараметров(Результат, Параметры) Экспорт
	
	Если Результат <> КодВозвратаДиалога.ОК Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрыЗаписи = Новый Структура;
	ПараметрыЗаписи.Вставить("ВыполнитьЗадачу", Истина);
		
	Если Не Записать(ПараметрыЗаписи) Тогда 
		Возврат;
	КонецЕсли;
	
	ОписаниеОповещения = Новый ОписаниеОповещения(
		"ПродолжениеВыполненияЗадачиПослеВводаВремени",
		ЭтотОбъект);
	
	УчетВремениКлиент.ДобавитьВОтчетПослеВыполненияЗадачи(ОпцияИспользоватьУчетВремени,
		Объект.ДатаИсполнения, Объект.Ссылка, ВключенХронометраж, 
		ДатаНачалаХронометража, ДатаКонцаХронометража,
		ВидыРабот, СпособУказанияВремени, ОписаниеОповещения);
	
КонецПроцедуры

