Функция ПолучитьПользователейГруппыПользователей(ГруппаПользователей, СУчетомИерархии = Истина) 
	
	УстановитьПривилегированныйРежим(Истина);
	
	Если ГруппаПользователей = Справочники.ГруппыПользователей.ВсеПользователи Тогда 
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	Пользователи.Ссылка
		|ИЗ
		|	Справочник.Пользователи КАК Пользователи
		|ГДЕ
		|	НЕ Пользователи.ПометкаУдаления
		|	И НЕ Пользователи.Недействителен";
		
		Возврат Запрос.Выполнить().Выгрузить().ВыгрузитьКолонку("Ссылка");
		
	Иначе	
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	ГруппыПользователейСостав.Пользователь
		|ИЗ
		|	Справочник.ГруппыПользователей.Состав КАК ГруппыПользователейСостав
		|ГДЕ
		|	НЕ ГруппыПользователейСостав.Пользователь.ПометкаУдаления
		|	И НЕ ГруппыПользователейСостав.Пользователь.Недействителен";
		
		Если СУчетомИерархии Тогда
			Запрос.Текст = Запрос.Текст + " И ГруппыПользователейСостав.Ссылка В ИЕРАРХИИ (&Ссылка)";	
		Иначе
			Запрос.Текст = Запрос.Текст + " И ГруппыПользователейСостав.Ссылка = &Ссылка";
		КонецЕсли;
		Запрос.УстановитьПараметр("Ссылка", ГруппаПользователей);
		
		Возврат Запрос.Выполнить().Выгрузить().ВыгрузитьКолонку("Пользователь");
		
	КонецЕсли;
	
